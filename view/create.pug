doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Create
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
    body 
        nav.navbar.navbar-expand-md.navbar-dark.bg-primary 
            .container 
                a.navbar-brand(href="/") PUG CRUD 
                button.navbar-toggler 
                    span.navbar-toggler-icon(data-bs-toggle="collapse",data-bs-target="#menu")
                .navbar-collapse.collapse#menu 
                    ul.navbar-nav 
                        li.nav-item 
                            a.nav-link(href="/") Home
                        li.nav-item 
                            a.nav-link(href="/task/new") Create

        .container 
            .row 
                .col-md-12.text-center 
                    h3.text-danger.display-3 Create Task

            .row 
                .col-md-6.offset-md-3 
                    .card 
                        .card-body 
                            form(autoComplete="off",action="/newtask",method="post")
                                .form-group.mt-2.mb-2 
                                    label(for="title") Title 
                                    input.form-control(type="text",name="title", required)
                                .form-group.mt-2.mb-2 
                                    label(for="sub")  Sub title 
                                    input.form-control(type="text",name="sub", required)
                                .form-group.mt-2.mb-2 
                                    label(for="desc") Desc title 
                                    textarea.form-control(name="desc", cols="30", rows="5" required)
                                .form-group.mt-2.mb-2 
                                    input.btn.btn-outline-success(type="submit", value="Create Task")
